{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"lib": ["ES2019"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"nodes/**/*.ts",
		"credentials/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
